@model Ticket

@{
    ViewData["Title"] = $"Ticket #{Model.Id}";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <div class="row align-items-center">
                        <div class="col">
                            <h5 class="mb-0">Ticket #@Model.Id</h5>
                        </div>
                        <div class="col text-end">
                            @switch (Model.Status)
                            {
                                case TicketStatus.Opened:
                                    <span class="badge bg-primary" style="font-size: 0.95rem;">Open</span>
                                    break;
                                case TicketStatus.Assigned:
                                    <span class="badge bg-info" style="font-size: 0.95rem;">Assigned</span>
                                    break;
                                case TicketStatus.InProgress:
                                    <span class="badge bg-warning" style="font-size: 0.95rem;">In Progress</span>
                                    break;
                                case TicketStatus.Resolved:
                                    <span class="badge bg-success" style="font-size: 0.95rem;">Resolved</span>
                                    break;
                                case TicketStatus.Closed:
                                    <span class="badge bg-secondary" style="font-size: 0.95rem;">Closed</span>
                                    break;
                            }
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <h3 class="card-title">@Model.Title</h3>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Priority:</strong>
                            @switch (Model.Priority)
                            {
                                case TicketPriority.Low:
                                    <span class="badge bg-success">Low</span>
                                    break;
                                case TicketPriority.Medium:
                                    <span class="badge bg-warning">Medium</span>
                                    break;
                                case TicketPriority.High:
                                    <span class="badge bg-danger">High</span>
                                    break;
                            }
                        </div>
                        <div class="col-md-6">
                            <strong>Category:</strong>
                            @if (!string.IsNullOrEmpty(Model.Category))
                            {
                                <span class="badge bg-secondary">@Model.Category</span>
                            }
                            else
                            {
                                <span class="text-muted">Not specified</span>
                            }
                        </div>
                    </div>

                    <hr />

                    <h5>Description</h5>
                    <p class="text-break">@Model.Description</p>

                    @if (!string.IsNullOrEmpty(Model.AttachmentPath))
                    {
                        <hr />
                        <h5>Attachment</h5>
                        <a href="@Model.AttachmentPath" target="_blank" class="btn btn-sm btn-outline-primary" download>
                            <i class="bi bi-download"></i> Download Attachment
                        </a>
                    }

                    <hr />

                    <div class="row">
                        <div class="col-md-6">
                            <strong>Submitter:</strong><br />
                            @Model.Submitter?.Email
                        </div>
                        <div class="col-md-6">
                            <strong>Assigned Agent:</strong><br />
                            @if (Model.AssignedAgent != null)
                            {
                                <span>@Model.AssignedAgent.Email</span>
                            }
                            else
                            {
                                <span class="text-muted">Not assigned</span>
                            }
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-6">
                            <strong>Created:</strong><br />
                            @Model.CreatedAt.ToString("g")
                        </div>
                        <div class="col-md-6">
                            <strong>Last Updated:</strong><br />
                            @(Model.UpdatedAt?.ToString("g") ?? "Never")
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Comments (@Model.Comments.Count)</h5>
                </div>
                <div class="card-body">
                    @if (Model.Comments.Any())
                    {
                        @foreach (var comment in Model.Comments.OrderByDescending(c => c.CreatedAt))
                        {
                            <div class="card mb-3">
                                <div class="card-body p-3">
                                    <div class="d-flex justify-content-between">
                                        <strong>@comment.Author?.Email</strong>
                                        <small class="text-muted">@comment.CreatedAt.ToString("g")</small>
                                    </div>
                                    <p class="mb-0 mt-2 text-break">@comment.Content</p>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted text-center my-3">No comments yet.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Actions</h5>
                </div>
                <div class="card-body">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning w-100 mb-2">
                        <i class="bi bi-pencil"></i> Edit Ticket
                    </a>

                    @if (User.IsInRole("Admin"))
                    {
                        <div class="btn-group w-100 mb-2" role="group">
                            <button type="button" class="btn btn-info dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-gear"></i> Update Status
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <form asp-action="UpdateStatus" asp-route-id="@Model.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" name="status" value="@TicketStatus.Opened" class="dropdown-item">
                                            <span class="badge bg-primary">Opened</span>
                                        </button>
                                    </form>
                                </li>
                                <li>
                                    <form asp-action="UpdateStatus" asp-route-id="@Model.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" name="status" value="@TicketStatus.Assigned" class="dropdown-item">
                                            <span class="badge bg-info">Assigned</span>
                                        </button>
                                    </form>
                                </li>
                                <li>
                                    <form asp-action="UpdateStatus" asp-route-id="@Model.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" name="status" value="@TicketStatus.InProgress" class="dropdown-item">
                                            <span class="badge bg-warning">In Progress</span>
                                        </button>
                                    </form>
                                </li>
                                <li>
                                    <form asp-action="UpdateStatus" asp-route-id="@Model.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" name="status" value="@TicketStatus.Resolved" class="dropdown-item">
                                            <span class="badge bg-success">Resolved</span>
                                        </button>
                                    </form>
                                </li>
                                <li>
                                    <form asp-action="UpdateStatus" asp-route-id="@Model.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" name="status" value="@TicketStatus.Closed" class="dropdown-item">
                                            <span class="badge bg-secondary">Closed</span>
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>

                        <button type="button" class="btn btn-success w-100 mb-2" data-bs-toggle="modal" data-bs-target="#assignModal">
                            <i class="bi bi-person-plus"></i> Assign to Agent
                        </button>

                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline w-100">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger w-100" onclick="return confirm('Are you sure you want to delete this ticket?');">
                                <i class="bi bi-trash"></i> Delete Ticket
                            </button>
                        </form>
                    }
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Ticket Info</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-6">Status:</dt>
                        <dd class="col-6">
                            @switch (Model.Status)
                            {
                                case TicketStatus.Opened:
                                    <span class="badge bg-primary">Opened</span>
                                    break;
                                case TicketStatus.Assigned:
                                    <span class="badge bg-info">Assigned</span>
                                    break;
                                case TicketStatus.InProgress:
                                    <span class="badge bg-warning">In Progress</span>
                                    break;
                                case TicketStatus.Resolved:
                                    <span class="badge bg-success">Resolved</span>
                                    break;
                                case TicketStatus.Closed:
                                    <span class="badge bg-secondary">Closed</span>
                                    break;
                            }
                        </dd>

                        <dt class="col-6">Priority:</dt>
                        <dd class="col-6">
                            @switch (Model.Priority)
                            {
                                case TicketPriority.Low:
                                    <span class="badge bg-success">Low</span>
                                    break;
                                case TicketPriority.Medium:
                                    <span class="badge bg-warning">Medium</span>
                                    break;
                                case TicketPriority.High:
                                    <span class="badge bg-danger">High</span>
                                    break;
                            }
                        </dd>

                        <dt class="col-6">Days Open:</dt>
                        <dd class="col-6">@((DateTime.UtcNow - Model.CreatedAt).Days) days</dd>

                        <dt class="col-6">Response Time:</dt>
                        <dd class="col-6">
                            @if (Model.UpdatedAt.HasValue)
                            {
                                <span>@((Model.UpdatedAt.Value - Model.CreatedAt).TotalHours.ToString("F1")) hrs</span>
                            }
                            else
                            {
                                <span class="text-muted">Pending</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Assign Modal -->
<div class="modal fade" id="assignModal" tabindex="-1" aria-labelledby="assignModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="assignModalLabel">Assign Ticket to Agent</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="Assign" asp-route-id="@Model.Id" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="agentSelect" class="form-label">Select Agent</label>
                        <select id="agentSelect" name="agentId" class="form-select" required>
                            <option value="">-- Choose an agent --</option>
                            @if (ViewBag.Agents != null)
                            {
                                @foreach (var agent in (IEnumerable<ApplicationUser>)ViewBag.Agents)
                                {
                                    <option value="@agent.Id">@agent.FirstName @agent.LastName (@agent.Email)</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Assign</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Placeholder for agent population logic
        document.addEventListener('DOMContentLoaded', function () {
            // This would typically be populated from the backend
            // For now, it's a placeholder for integration with agent management
        });
    </script>
}
