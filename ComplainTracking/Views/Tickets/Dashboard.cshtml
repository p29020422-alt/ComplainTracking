@model DashboardStatsDto

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1><i class="bi bi-speedometer2"></i> Admin Dashboard</h1>
        </div>
        <div class="col text-end">
            <a asp-controller="Tickets" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-list-ul"></i> View All Tickets
            </a>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-left-primary">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Tickets</div>
                            <div class="h3 mb-0 font-weight-bold">@Model.TotalTickets</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-ticket-perforated" style="font-size: 2rem; color: #0d6efd;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-left-success">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Resolved Tickets</div>
                            <div class="h3 mb-0 font-weight-bold">@Model.ResolvedTickets</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-check-circle" style="font-size: 2rem; color: #198754;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-left-warning">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Open Tickets</div>
                            <div class="h3 mb-0 font-weight-bold">@Model.OpenTickets</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-clock" style="font-size: 2rem; color: #ffc107;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-left-info">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Resolution Rate</div>
                            <div class="h3 mb-0 font-weight-bold">
                                @{
                                    var resolutionRate = Model.TotalTickets > 0 
                                        ? Math.Round((double)Model.ResolvedTickets / Model.TotalTickets * 100, 1) 
                                        : 0;
                                }
                                @resolutionRate%
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-graph-up" style="font-size: 2rem; color: #0dcaf0;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Ticket Status Distribution</h5>
                </div>
                <div class="card-body">
                    <div style="position: relative; height: 300px;">
                        <canvas id="statusChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Tickets by Category</h5>
                </div>
                <div class="card-body">
                    <div style="position: relative; height: 300px;">
                        <canvas id="categoryChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Category Breakdown Table -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Breakdown by Category</h5>
                </div>
                <div class="card-body">
                    @if (Model.TicketsByCategory.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Category</th>
                                        <th>Count</th>
                                        <th>Percentage</th>
                                        <th>Progress</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var category in Model.TicketsByCategory.OrderByDescending(x => x.Value))
                                    {
                                        var percentage = Model.TotalTickets > 0 
                                            ? Math.Round((double)category.Value / Model.TotalTickets * 100, 1) 
                                            : 0;
                                        <tr>
                                            <td><strong>@category.Key</strong></td>
                                            <td>@category.Value</td>
                                            <td>@percentage%</td>
                                            <td>
                                                <div class="progress" style="height: 20px;">
                                                    <div class="progress-bar" role="progressbar" 
                                                         style="width: @percentage%;" 
                                                         aria-valuenow="@category.Value" 
                                                         aria-valuemin="0" 
                                                         aria-valuemax="@Model.TotalTickets">
                                                        @percentage%
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center my-3">No category data available.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom styles for cards -->
<style>
    .border-left-primary {
        border-left: 4px solid #0d6efd !important;
    }

    .border-left-success {
        border-left: 4px solid #198754 !important;
    }

    .border-left-warning {
        border-left: 4px solid #ffc107 !important;
    }

    .border-left-info {
        border-left: 4px solid #0dcaf0 !important;
    }

    .font-weight-bold {
        font-weight: 700 !important;
    }

    .text-xs {
        font-size: 0.75rem;
    }

    .text-uppercase {
        text-transform: uppercase !important;
    }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        // Status Chart Data
        var statusCtx = document.getElementById('statusChart').getContext('2d');
        var statusChart = new Chart(statusCtx, {
            type: 'doughnut',
            data: {
                labels: ['Open', 'Resolved', 'Other'],
                datasets: [{
                    data: [@Model.OpenTickets, @Model.ResolvedTickets, @(Model.TotalTickets - Model.OpenTickets - Model.ResolvedTickets)],
                    backgroundColor: [
                        'rgba(255, 193, 7, 0.8)',      // Yellow for Open
                        'rgba(25, 135, 84, 0.8)',      // Green for Resolved
                        'rgba(108, 117, 125, 0.8)'     // Gray for Other
                    ],
                    borderColor: [
                        'rgba(255, 193, 7, 1)',
                        'rgba(25, 135, 84, 1)',
                        'rgba(108, 117, 125, 1)'
                    ],
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });

        // Category Chart Data
        @{
            var categories = new List<string>();
            var counts = new List<int>();
            foreach (var cat in Model.TicketsByCategory.OrderByDescending(x => x.Value).Take(5))
            {
                categories.Add(cat.Key);
                counts.Add(cat.Value);
            }
        }

        var categoryCtx = document.getElementById('categoryChart').getContext('2d');
        var categoryChart = new Chart(categoryCtx, {
            type: 'bar',
            data: {
                labels: [@string.Join(", ", categories.Select(c => $"'{c}'"))],
                datasets: [{
                    label: 'Number of Tickets',
                    data: [@string.Join(", ", counts)],
                    backgroundColor: [
                        'rgba(13, 110, 253, 0.8)',
                        'rgba(13, 202, 240, 0.8)',
                        'rgba(111, 66, 193, 0.8)',
                        'rgba(220, 53, 69, 0.8)',
                        'rgba(255, 193, 7, 0.8)'
                    ],
                    borderColor: [
                        'rgba(13, 110, 253, 1)',
                        'rgba(13, 202, 240, 1)',
                        'rgba(111, 66, 193, 1)',
                        'rgba(220, 53, 69, 1)',
                        'rgba(255, 193, 7, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                indexAxis: 'y',
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true
                    }
                },
                scales: {
                    x: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
}
